{
	"title": "Achievements",
	"$schema": "https://dotnet.github.io/docfx/schemas/v1.0/schema.json#",
	"version": "1.0.0",
	"description": "Triple Crown Achievement definition.",
	"id": "https://github.com/dotnet/docfx/schemas/achievements.schema.json",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"achievements"
	],
	"properties": {
		"achievements": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [
					"uid",
					"type",
					"title",
					"summary",
					"iconUrl"
				],
				"additionalProperties": false,
				"properties": {
					"uid": {
						"type": "string",
						"contentType": "uid"
					},
					"type": {
						"type": "string",
						"enum": [
							"trophy",
							"badge"
						]
					},
					"title": {
						"tags": [
							"localizable"
						],
						"type": "string"
					},
					"summary": {
						"tags": [
							"localizable"
						],
						"type": "string",
						"contentType": "markdown"
					},
					"description": {
						"tags": [
							"localizable"
						],
						"type": "string",
						"contentType": "markdown"
					},
					"iconUrl": {
						"type": "string",
						"contentType": "href"
					}
				}
			}
		}
	}
}