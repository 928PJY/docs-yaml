{
	"title": "Module",
	"$schema": "https://dotnet.github.io/docfx/schemas/v1.0/schema.json#",
	"version": "1.0.0",
	"description": "A Triple Crown Module.",
	"id": "https://github.com/dotnet/docfx/schemas/module.schema.json",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"abstract",
		"achievement",
		"iconUrl",
		"levels",
		"products",
		"roles",
		"summary",
		"title",
		"uid",
		"units"
	],
	"properties": {
		"abstract": {
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown",
			"description": "`abstract` appears on the module page beneath the summary and level/role/product metadata "
		},
		"achievement": {
			"type": "string",
			"contentType": "xref",
			"description": "`achievement` is the `uid` for the badge"
		},
		"cardDescription": {
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown"
		},
		"iconUrl": {
			"type": "string",
			"contentType": "href",
			"description": "`iconUrl` is the badge image "
		},
		"levels": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"enum": [
					"beginner",
					"intermediate",
					"advanced"
				]
			},
			"description": "`beginner`, `intermediate`, `advanced`"
		},
		"metadata": {
			"properties": {
				"title": {
					"type": "string",
					"tags": [
						"localizable"
					]
				},
				"description": {
					"type": "string",
					"tags": [
						"localizable"
					]
				}
			},
			"type": "object"
		},
		"prerequisites": {
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown"
		},
		"products": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string"
			}
		},
		"roles": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"enum": [
					"developer",
					"administrator",
					"solutionsArchitect",
					"businessUser",
					"businessAnalyst"
				]
			},
			"description": "`developer`, `administrator`, `solutionsArchitect`, `businessUser`, `businessAnalyst`"
		},
		"summary": {
			"tags": [
				"localizable"
			],
			"type": "string",
			"contentType": "markdown",
			"description": "`summary` appears at the top of the module page beneath the title"
		},
		"title": {
			"type": "string",
			"tags": [
				"localizable"
			],
			"description": "`title` appears in the header, ToC, and breadcrumbs"
		},
		"uid": {
			"type": "string",
			"contentType": "uid",
			"description": "`uid`s are manually created by the writer and should follow the format <repo>.<module-short-name>. Keep it easy on yourself and keep the module-short-name the same as the module folder name."
		},
		"units": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"contentType": "xref"
			},
			"description": "`units` are lists of all of the unit uids, in the order they should be displayed to the user in"
		}
	},
	"metadata": "/metadata",
	"xrefProperties": [
		"title",
		"iconUrl",
		"summary",
		"cardDescription"
	]
}